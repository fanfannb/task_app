<p style="color: green"><%= notice %></p>
<div class="pannel">
  <h1><%= @task.title %></h1>

  <p>
    <%= @task.content %>
  </p>

  <p>
    <strong>期限：</strong>
    <%= @task.deadline.to_date %>
  </p>

  <p>
    <strong>ステーター：</strong>
    <%= @task.status %>
  </p>

  <div>
    <%= link_to '戻る', 'javascript:;', class: 'btn btn-default return' %>
    <% if @task.creator_id == current_user.id %>
      <%= link_to '編集', edit_task_path(@task), class: 'btn btn-info' %>
      <%= link_to 'アサイン', assign_task_path(@task), class: 'btn btn-success' %>
    <% end %>
  </div>
</div>

<script>
  $('.submit-assign').click(function() {
    $('form').submit();
  });

  $('.return').click(function() {
    window.history.back();
  });
</script>