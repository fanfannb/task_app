<p style="color: green"><%= notice %></p>

<% title = params[:type] == 'my' ? 'マイタスク' : 'タスク一覧' %>

<div style="margin-left: 15px;">
  <h1><%= title %></h1>
  <div class="input-group">
    <%= search_form_for @q do |f| %>
      <%= hidden_field_tag :type, params[:type] %>
      <%= f.search_field :title_cont, class: 'form-control', style: 'width: 200px;', placeholder: 'please input title...' %>
      <div class="input-group-btn">
        <%= f.button 'Search', class: 'btn btn-default' %>
      </div>
    <% end %>
  </div>
  <br>
</div>

<% if params[:type] == 'my' %>
  <%= link_to "New task", new_task_path, class: "btn btn-success", style: 'margin-left: 15px;margin-bottom: 10px;' %>
<% end %>

<div id="tasks">
  <% @tasks.each do |task| %>
    <div class="col-md-4 col-sm-6 col-xs-12">
      <%= render task %>
    </div>
  <% end %>
</div>
