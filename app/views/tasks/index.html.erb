<p style="color: green"><%= notice %></p>

<% title = params[:type] == 'my' ? 'My Tasks' : 'Task List' %>

<h1 style="margin-left: 15px;"><%= title %></h1>

<% if params[:type] == 'my' %>
  <%= link_to "New task", new_task_path, class: "btn btn-success", style: 'margin-left: 15px;margin-bottom: 10px;' %>
<% end %>

<div id="tasks">
  <% @tasks.each do |task| %>
    <div class="col-md-4">
      <%= render task %>
    </div>
  <% end %>
</div>
