<p style="color: green"><%= notice %></p>

<% title = params[:type] == 'my' ? 'My Tasks' : 'All Tasks' %>
<h1><%= title %></h1>

<div id="tasks">
  <% @tasks.each do |task| %>
    <%= render task %>
    <p>
      <%= link_to "Show this task", task %>
    </p>
  <% end %>
</div>

<%= link_to "New task", new_task_path %>
