<p style="color: green"><%= notice %></p>

<% title = params[:type] == 'my' ? 'My Tasks' : 'All Tasks' %>
<h1 style="margin-left: 15px;"><%= title %></h1>

<div id="tasks">
  <% @tasks.each do |task| %>
    <div class="col-md-4">
      <%= render task %>
    </div>
  <% end %>
</div>

<%= link_to "New task", new_task_path %>
